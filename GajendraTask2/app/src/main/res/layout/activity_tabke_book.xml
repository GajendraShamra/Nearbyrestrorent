<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.parthdave.nearbysearch.ui.activity.TabkeBookActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Book Table Persnal Details"
        android:textSize="20dp"
        android:padding="10sp"
        android:layout_marginBottom="40dp"
        android:textColor="#FFFF"
        android:background="#fa1919"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_weight="0.5"
            android:text="No. of Order "/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_marginLeft="60sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/table_m"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:padding="5sp"
                    android:src="@drawable/minus"
                    android:background="#d68529"/>
                <TextView
                    android:id="@+id/count_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10sp"
                    android:text="0"/>
                <ImageView
                    android:id="@+id/table_p"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/plus"
                    android:padding="5sp"
                    android:background="#d68529"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:weightSum="1"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/datetime"
            android:layout_weight="0.5"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
            android:id="@+id/selectdatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00/00/00"
                android:inputType="number"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/rectangle"
            android:textSize="18sp" />
            <EditText
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00:00"
                android:inputType="number"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rectangle"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:textSize="18sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter here"
        android:background="@drawable/rectangle"
        android:padding="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:textSize="18sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mobile"
        android:padding="5sp"
        android:layout_marginLeft="5sp"
        android:inputType="number"
        android:background="@drawable/rectangle"
        android:layout_marginRight="5sp"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="20sp"
        android:textSize="18sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Enter comment"
        android:layout_marginLeft="5sp"
        android:inputType="number"
        android:layout_marginRight="5sp"
        android:background="@drawable/rectangle"
        android:textSize="18sp" />
    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="#fa1919"
        android:textColor="#FFFF"
        android:text="Submit"/>
</LinearLayout>
</ScrollView>
