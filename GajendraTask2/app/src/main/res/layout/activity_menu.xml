<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.parthdave.nearbysearch.ui.activity.MenuActivity">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_weight="99"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_left1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="2dp"
        android:layout_margin="10sp"
        card_view:cardBackgroundColor="#d3ead0"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="2dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="0.7"
            android:padding="20sp"
            android:layout_gravity="center"
            android:background="@drawable/fish_rice"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_margin="5sp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Madras fish with turmeric and vegetable rice." />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ :- "/>

                <TextView
                    android:id="@+id/fish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="60sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/minus_fish"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:padding="5sp"
                        android:src="@drawable/minus"
                        android:background="#d68529"/>
                    <TextView
                        android:id="@+id/count_fish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="10sp"
                        android:text="1"/>
                    <ImageView
                        android:id="@+id/plus_fish"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/plus"
                        android:padding="5sp"
                        android:background="#d68529"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_left2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="2dp"
        android:layout_margin="10sp"
        card_view:cardBackgroundColor="#d3ead0"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:padding="2dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="0.7"
                android:padding="20sp"
                android:layout_gravity="center"
                android:background="@drawable/buttuerchicken"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_margin="5sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="800g chicken, boneless and skinless, cut into 3-4cm pieces." />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ :- "/>

                    <TextView
                        android:id="@+id/chicken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="400"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="60sp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/minus_chicken"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:padding="5sp"
                            android:src="@drawable/minus"
                            android:background="#d68529"/>
                        <TextView
                            android:id="@+id/count_chicken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:padding="10sp"
                            android:text="0"/>
                        <ImageView
                            android:id="@+id/plus_chicken"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:src="@drawable/plus"
                            android:padding="5sp"
                            android:background="#d68529"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_lefti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="2dp"
            android:layout_margin="10sp"
            card_view:cardBackgroundColor="#d3ead0"
            card_view:cardElevation="6dp"
            card_view:cardMaxElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:padding="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="0.7"
                    android:padding="20sp"
                    android:layout_gravity="center"
                    android:background="@drawable/muttonchap"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_margin="5sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Mutton chaap is a Mughal delicacy and is usually served as a complimentary dish along with Biryani or roomali roti.." />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ :- "/>

                        <TextView
                            android:id="@+id/mutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="60sp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/minus_mutton"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:padding="5sp"
                                android:src="@drawable/minus"
                                android:background="#d68529"/>
                            <TextView
                                android:id="@+id/count_mutton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:padding="10sp"
                                android:text="0"/>
                            <ImageView
                                android:id="@+id/plus_mutton"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:src="@drawable/plus"
                                android:padding="5sp"
                                android:background="#d68529"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_lefte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="2dp"
            android:layout_margin="10sp"
            card_view:cardBackgroundColor="#d3ead0"
            card_view:cardElevation="6dp"
            card_view:cardMaxElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:padding="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="0.7"
                    android:padding="20sp"
                    android:layout_gravity="center"
                    android:background="@drawable/dalmakhani"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_margin="5sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Dal Makhani Masala,Dal Spicy Masala Mix, MDH, 200g." />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ :- "/>

                        <TextView
                            android:id="@+id/dal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="210"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="60sp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/minus_dal"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:padding="5sp"
                                android:src="@drawable/minus"
                                android:background="#d68529"/>
                            <TextView
                                android:id="@+id/count_dal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:padding="10sp"
                                android:text="0"/>
                            <ImageView
                                android:id="@+id/plus_dal"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:src="@drawable/plus"
                                android:padding="5sp"
                                android:background="#d68529"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/linear_checkout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#d68529"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:text="Checkout"/>
    </LinearLayout>
</LinearLayout>
